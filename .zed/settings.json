{
  "inlay_hints": {
    "enabled": true
  },
  "format_on_save": "on",
  "languages": {
    "JavaScript": {
      "code_actions_on_format": {
        "source.fixAll.eslint": true
      }
    },
    "TypeScript": {
      "code_actions_on_format": {
        "source.fixAll.eslint": true
      },
      "language_servers": ["!vtsls", "tsgo"]
    },
    "TSX": {
      "code_actions_on_format": {
        "source.fixAll.eslint": true
      },
      "language_servers": ["eslint", "!vtsls", "tsgo", "tailwindcss-language-server"]
    }
  },
  "auto_install_extensions": {
    "emmet": true,
    "tsgo": true
  },
  "lsp": {
    "tailwindcss-language-server": {
      "settings": {
        "classFunctions": ["cva", "cx", "twmerge"],
        "experimental": {
          "classRegex": ["[cls|className]\\s\\:\\=\\s\"([^\"]*)"]
        }
      }
    }
  }
}
