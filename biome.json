{
  "$schema": "https://biomejs.dev/schemas/2.3.10/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "includes": ["**", "!!**/dist"]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space"
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "overrides": [
    {
      "includes": ["**/*.astro"],
      "linter": {
        "rules": {
          "correctness": {
            "noUnusedImports": "off",
            "noUnusedVariables": "off"
          }
        }
      }
    }
  ],
  "javascript": {
    "formatter": {
      "quoteStyle": "double"
    }
  },
  "assist": {
    "enabled": true,
    "actions": {
      "source": {
        "organizeImports": {
          "level": "on",
          "options": {
            "groups": [
              ["astro:*", "*astro-*", "astro*/*"],
              ":PACKAGE:",
              ["~/constants"],
              ":ALIAS:",
              "**"
            ]
          }
        }
      }
    }
  },
  "css": {
    "parser": {
      "tailwindDirectives": true
    },
    "formatter": {
      "indentWidth": 4,
      "indentStyle": "space"
    }
  },
  "html": {
    "experimentalFullSupportEnabled": true,
    "formatter": {
      "whitespaceSensitivity": "ignore",
      "indentWidth": 4,
      "enabled": true,
      "selfCloseVoidElements": "always",
      "indentScriptAndStyle": false
    }
  }
}
